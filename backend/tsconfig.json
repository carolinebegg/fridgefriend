{
  "compilerOptions": {
    // File Layout
    "rootDir": "../",
    "outDir": "./dist",

    // Module / environment
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "types": ["node"],
    "esModuleInterop": true,

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,

    // Misc
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "../shared/**/*.ts"
  ],
}
